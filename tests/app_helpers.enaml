def validate2(window, event):
    man = window.workbench.get_manifest('test.closing2')
    man.called = True
    if man.accept:
        event.accept()
    else:
        event.ignore()

enamldef ClosingContributor2(PluginManifest):
    """
    """
    attr accept = False
    attr called = False
    id = u'test.closing2'
    factory = _Pref

    Extension:
        id = 'closing'
        point = u'hqc_meas.app.closing'
        factory = lambda workbench: [ClosingApp(id = 'test2',
                                                validate = validate2)]

